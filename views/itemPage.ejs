<!DOCTYPE html>
<html>

<head>
  <title>Item Page</title>
  <link href="https://fonts.googleapis.com/css?family=Roboto|Roboto+Condensed|Ubuntu+Condensed&display=swap"
    rel="stylesheet" />
  <link rel="stylesheet" type="text/css" href="../public/style.css" />
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" />
  <script src="../public/jquery.js"></script>
</head>

<body>
  <!-- navbar -->
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand" href="#">ADITPEDIA</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
      aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav">
        <li class="nav-item active">
          <a class="nav-link" href="#">Home <span class="sr-only">(current)</span></a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="../products">Color</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="../contact">Contact</a>
        </li>
      </ul>
      <ul class="navbar-nav ml-auto">
        <li class="nav-item">
          <a class="nav-link" href="../cart">
            <i class="fas fa-shopping-cart"></i>
            <span class="badge badge-pill badge-danger">
              <em> <% if(cartNumb != 0) {%> <%= cartNumb %> <% } %> </em>
            </span>
          </a>
        </li>
      </ul>
    </div>
  </nav>
  <!-- content -->
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-8">
        <img src="../public/<%= listing.image %>" class="img-fluid" alt="<%= listing.title %>">
      </div>

      <div class="col-md-4">
        <h2><%= listing.title %></h2>
        <h3 class="text-success">$<%= listing.price %></h3>

        <div class="d-grid gap-2 mt-4">
          <a href="../buyNow/<%= listing.ID %>">
            <button id="buyNow" class="btn btn-primary">Buy it Now</button>
          </a>
          <button id="addCart" value="<%= listing.ID %> " class="btn btn-secondary">Add to Cart</button>
        </div>

        <div class="mt-4">
          <h4>Description:</h4>
          <p><%= listing.description %></p>
        </div>

        <div class="mt-4">
          <p><i>Shipping Time: 4-5 Days</i></p>
        </div>
      </div>
    </div>
  </div>


</body>

</html>